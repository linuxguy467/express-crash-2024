{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*.{html,js}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "outputDirectory": "public",
  "buildCommand": "echo \"MAIN_SERVER_PORT=5010\" > .env",
  "installCommand": "npm install"
}
